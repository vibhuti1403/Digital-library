<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context="com.rcpl.digilib.ViewBooksActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/CITY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="BOOK:"
        android:textAllCaps="true"
        android:textColor="#14a39c"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/NAME"
        app:layout_constraintLeft_toLeftOf="@+id/NAME"
        app:layout_constraintRight_toRightOf="@+id/NAME"
        app:layout_constraintTop_toTopOf="@+id/bookName"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/NAME"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="AUTHOR:"
        android:textAllCaps="true"
        android:textColor="#14a39c"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bookAuthor"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/bookName"
        android:layout_width="182dp"
        android:layout_height="25dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginTop="30dp"
        android:text="tvcid"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/NAME"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="182dp"
        android:layout_height="25dp"
        android:text="tvName"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/bookName"
        app:layout_constraintRight_toRightOf="@+id/bookName"
        app:layout_constraintTop_toBottomOf="@+id/bookName"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bookAuthor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:scaleX="1.50"
        android:scaleY="1.50"/>

</android.support.constraint.ConstraintLayout>
