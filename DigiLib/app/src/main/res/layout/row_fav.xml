<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="30dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bookTV"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/delete"
            android:layout_marginStart="18dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/authTV"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="TextView"
            android:layout_alignBottom="@+id/delete"
            android:layout_alignStart="@+id/bookTV" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/dustbin1" />

        <ImageView
            android:id="@+id/IVdown"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/delete"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/delete"
            app:srcCompat="@drawable/bookdownload"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />
    </RelativeLayout>


</android.support.v7.widget.CardView>